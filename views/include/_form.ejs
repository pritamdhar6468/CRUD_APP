<form  action="/api/users" method="POST" id="add_user">
    <div class="new_user">


        <div class="form-group">
            <lebel for="name" class="text-light">Name</lebel>
            <input type="hidden" name="id" value="">
            <input type="text" name="value" value="" placeholder="pritam dhar">
        </div>


        <div class="form-group">
            <lebel for="Email" class="text-light">E-mail</lebel>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>

                   <!--Gender section-->


        <div class="form-group">
            <lebel for="gender" class="text-light">Gender</lebel>
            <div class="radio-inline">
                <input type="radio" id="radio-2" name="gender" value="Male">
                <lebel for="radio-2" class="radio-lebel">Male</lebel>
            </div>

            <div class="radio-inline">
                <input type="radio" id="radio-3" name="gender" value="female">
                <lebel for="radio-3" class="radio-lebel">Female</lebel>
            </div>


                <!--status section-->


            <div class="form-group">
                <lebel for="gender" class="text-light">Status</lebel>
                <div class="radio-inline">
                    <input type="radio" id="radio-4" name="status" value="active">
                    <lebel for="radio-4" class="radio-lebel">active</lebel>
                </div>

                <div class="radio-inline">
                    <input type="radio" id="radio-5" name="status" value="inactive">
                    <lebel for="radio-5" class="radio-lebel">inactive</lebel>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>
        </div>

</form>